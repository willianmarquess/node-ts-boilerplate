  "compilerOptions": {
    "target": "es2022",                          
    "module": "commonjs",                                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "." ,
    "baseUrl": ".",
    "paths": {
      "src:/": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}