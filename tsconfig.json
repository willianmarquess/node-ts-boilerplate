{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDirs": [
      "src",
      "test"
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@/test/*": ["../test/*"]
    }
  },
  "include": [
    "src",
    "test"
  ]
}